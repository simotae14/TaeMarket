<%= form_for @content, html: { multipart: true } do |f| %>
  <% if @content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% @content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="grey-text">
      Carica il contenuto digitale che vuoi vendere (formati supportati: PowerPoint, Excel, Word, PDF, Immagini e MP3)  
    </label><br>
    <div class="file-field input-field">
      <div class="btn">
        <span>Scegli il File</span>
        <%= f.file_field :allegato %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" placeholder="Nessun File Selezionato">
      </div>
    </div>
    
  </div>
  <br>
  
  <div class="input-field">
    <%= f.label :titolo %><br>
    <%= f.text_field :titolo %>
  </div>
  <div class="input-field">
    <%= f.label :descrizione %><br>
    <%= f.text_area :descrizione, class: 'materialize-textarea' %>
  </div>
  <div class="input-field">
    <%= f.label :prezzo_min_50_cent %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <label class="grey-text">
      Carica un'immagine come cover per il tuo contenuto
    </label><br>
    <div class="file-field input-field">
      <div class="btn">
        <span>Scegli il File</span>
        <%= f.file_field :cover %>
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" placeholder="Nessun File Selezionato">
      </div>
    </div>
  </div>
  
  <br>
  
  <div class="actions">
    <%= f.submit 'Salva Contenuto', class: 'btn btn-form' %>
  </div>
  <br>
<% end %>
